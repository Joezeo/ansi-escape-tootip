<idea-plugin>
    <id>com.toocol.plugin.anisEscapeTooltip</id>
    <name>Anis Escape Tooltip</name>
    <vendor email="joezane.cn@gmail.com" url="https://www.toocol.com">TooCol</vendor>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="withLang.xml">com.intellij.modules.lang</depends>
    <depends optional="true" config-file="withJava.xml">com.intellij.java</depends>

    <resource-bundle>messages.AnisEscapeTooltipBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.toocol.plugin.tooltip.listeners.ApplicationStartupListener"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.toocol.plugin.tooltip.config.home.EscapeApplicationSettingsConfigurable"
                id="com.toocol.plugin.tooltip.config.home.EscapeApplicationSettingsConfigurable"
                displayName="Anis Escape Tooltip"/>
        <projectService serviceImplementation="com.toocol.plugin.tooltip.config.custom.AnisEscapeCustomSettingsConfig"/>

        <notificationGroup displayType="BALLOON" id="Anis Escape Sequence Tooltip Notification"/>

        <backgroundPostStartupActivity implementation="com.toocol.plugin.tooltip.PluginUpdatesChecker"/>

    </extensions>

    <description><![CDATA[
    Support for anis escape code sequence. <br/>
    </br>
    <h3> Features </h3>
    <p>Highlight and tooltip the parsed anis escape code sequence</p>
    <p>from the String on the editor.</p>
    </br>
    <p>Currently supported files:</p>
    <ul>
      <li>.java</li>
      <li>.log</li>
      <li>.txt</li>
      <li>.rst</li>
    </ul>
    <h3> Settings </h3>
    File > Settings > Tools > Anis Escape Tooltip
    </br>
    <h3> Screenshot </h3>
    <div>
      <img
        src="https://github.com/toocol/anis-escape-tootip/blob/master/src/main/resources/screenshot/screenshot.png?raw=true"
        alt="screen shot" width="512">
    </div>
    ]]></description>
</idea-plugin>