<idea-plugin>
    <id>com.toocol.plugin.anis-escape-tooltip</id>
    <name>Anis Escape Tooltip</name>
    <vendor email="joezane.cn@gmail.com" url="http://www.toocol.com">toocol</vendor>

    <description><![CDATA[
    The tooltip for anis escape code. Extract the parsed anis-escape-code sequence from the String of the editor.<br>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="anis.escape.tooltip.extract" class="com.toocol.plugin.tooltip.ExtractEscapeCodeSequenceAction"
                text="ExtractEscapeCodeSequence"
                description="Extract the anis escape code sequence from the String of the editor.">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>